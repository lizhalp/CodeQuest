<div class="container">
  <div class="row g-3">
    <div class="col">
      <div id="<%= dom_id content %>" class="card mb-4 h-100">
        <div class="card-header d-flex justify-content-between align-items-center">
          <div>
            <h5 class="card-title mb-0"><%= content.title %></h5>
            <h6 class="card-subtitle text-muted">By: <%= link_to content.user.username, content.user %></h6>
          </div>
          <div class="btn-group" role="group">
            <% if Current.user == content.user %>
              <%= link_to edit_content_path(content) do %>
                <i class="bi bi-pencil-square me-3" style="font-size: 1.2em; color: hotpink;"></i>
              <% end %>
            <% end %>
            <%= render 'layouts/vote_buttons', content:, user: Current.user %>
          </div>
        </div>
        <div class="card-body">
          <div class="card-text">
            <%= simple_format(content.content_text) %>
          </div>
        </div>
      </div>
    </div>
</div>
