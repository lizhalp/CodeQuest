<% content_for :title, "New content" %>

<turbo-frame id="main-content">
    <h3 id="sidebar-heading"style="margin-top: 25px; display: flex; justify-content: space-between; align-items: center;">
        Create <%= @topic.name %> lesson
        <%= link_to topic_path(@topic) do %>
            <i class="bi bi-x" style="font-size: 1.5em; color: hotpink;"></i>
        <% end %>
    </h3>
    <%= render "form", content: @content %>
</turbo-frame>  