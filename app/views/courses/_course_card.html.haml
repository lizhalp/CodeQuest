%div.max-w-4xl.mx-auto.bg-white.dark:bg-gray-800.shadow-md.rounded-lg.mt-6.border-r-4.border-pink-400.dark:border-pink-400.flex
  - if course.image.attached?
    %div.h-auto.border-gray-800.border{ class: "w-1/3" }
      = image_tag course.image, class: "w-full h-full object-cover rounded-l-lg"
  %div.p-6{ class: "w-2/3" }
    %h2.text-2xl.font-semibold.text-gray-900.dark:text-gray-100
      = link_to course.title, course_path(course)
    %p.mb-4.text-sm.text-gray-500.dark:text-gray-400
      By: 
      = link_to course.user.username, user_path(course.user), class: "text-pink-500.dark:text-pink-400"
    %p.text-gray-700.dark:text-gray-300.mb-4= course.description
