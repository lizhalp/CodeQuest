<% content_for :title, "New user" %>

<h1 class="my-4">New User</h1>

<%= form_with(model: @user, local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
  <div class="mb-3">
    <%= form.label :email_address, class: 'form-label' %>
    <%= form.text_field :email_address, class: 'form-control', required: true %>
  </div>
  <div class="mb-3">
    <%= form.label :username, class: 'form-label' %>
    <%= form.text_field :username, class: 'form-control', required: true %>
  </div>
  <div class="mb-3">
    <%= form.label :password, class: 'form-label' %>
    <%= form.password_field :password, class: 'form-control', required: true %>
  </div>

  <div class="form-check mb-3">
    <%= form.check_box :notifications_enabled, class: 'form-check-input' %>
    <%= form.label :notifications_enabled, class: 'form-check-label' %>
  </div>

  <div class="form-check mb-3">
    <%= form.check_box :dark_mode_enabled, class: 'form-check-input' %>
    <%= form.label :dark_mode_enabled, class: 'form-check-label' %>
  </div>

  <div class="actions">
    <%= form.submit 'Create User', class: 'btn btn-primary' %>
  </div>
<% end %>
