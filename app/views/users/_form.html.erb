<%= form_with(model: @user, local: true, html: { class: 'form-horizontal' }) do |form| %>
    <div class="form-group mb-3">
        <%= form.label :email_address, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= form.text_field :email_address, class: 'form-control', value: @user.email_address, disabled: true %>
        </div>
    </div>

    <div class="form-group mb-3">
        <%= form.label :username, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= form.text_field :username, class: 'form-control' %>
        </div>
    </div>

    <div class="form-group mb-3">
        <div class="col-sm-offset-2 col-sm-10">
            <%= form.submit class: 'btn btn-primary' %>
        </div>
    </div>
<% end %>
