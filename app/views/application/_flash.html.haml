- flash.each do |type, message|
  - if type == 'notice'
    - alert_class = 'bg-blue-100 border border-blue-400 text-blue-700'
  - elsif type == 'alert'
    - alert_class = 'bg-red-100 border border-red-400 text-red-700'
  - elsif type == 'success'
    - alert_class = 'bg-green-100 border border-green-400 text-green-700'
  - else
    - alert_class = 'bg-gray-100 border border-gray-400 text-gray-700'
  .alert(class="#{alert_class} px-4 py-3 rounded relative mb-4 flex items-start" role="alert")
    %span.flex-1= message
    %button.close(type="button" aria-label="Close" onclick="this.parentElement.style.display='none';" class="ml-4 text-xl font-bold focus:outline-none hover:text-gray-500")
      %span(aria-hidden="true") &times;
